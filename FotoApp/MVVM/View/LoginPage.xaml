<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FotoApp.MVVM.View.LoginPage"
             Title="Inloggen"
             BackgroundColor="{DynamicResource AppBackgroundColor}">
    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label Text="FotoApp - Login" 
               FontSize="24" 
               HorizontalOptions="Center" 
               TextColor="Black" />

        <Label Text="E-mailadres:" 
               FontAttributes="Bold" />
        <Entry x:Name="EmailEntry" 
               Placeholder="Voer hier je e-mailadres in" 
               Keyboard="Email" />

        <Label Text="Wachtwoord:" 
               FontAttributes="Bold" />
        <Entry x:Name="PasswordEntry" 
               Placeholder="Voer hier je wachtwoord in" 
               IsPassword="True" />

        <Button Text="Inloggen" 
                Clicked="OnLoginButtonClicked" 
                BackgroundColor="Green" 
                TextColor="White" 
                CornerRadius="10" 
                HeightRequest="50" />
    </VerticalStackLayout>
</ContentPage>
