<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:FotoApp.Controls"
             x:Class="FotoApp.MVVM.View.ManageUser"
             Title="Beheer Gebruikers">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="0" Padding="20">
            <VerticalStackLayout>
                <Label Text="Gebruikersbeheer" FontSize="Large" HorizontalOptions="Center"/>

                <ListView x:Name="UsersListView" ItemsSource="{Binding Users}" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <HorizontalStackLayout Padding="10">
                                    <Label Text="{Binding Username}" FontSize="Medium" HorizontalOptions="StartAndExpand"/>

                                    <Button Text="Bewerk" 
                                            Clicked="OnEditUser" 
                                            CommandParameter="{Binding Id}" 
                                            BackgroundColor="Blue"
                                            TextColor="White"
                                            FontSize="16"
                                            FontAttributes="Bold"
                                            Padding="10"
                                            WidthRequest="100"
                                            HeightRequest="40"
                                            CornerRadius="5"
                                            BorderWidth="0"/>

                                    <Button Text="Verwijder" 
                                            Clicked="OnDeleteUser" 
                                            CommandParameter="{Binding Id}" 
                                            BackgroundColor="Red"
                                            TextColor="White"
                                            FontSize="16"
                                            FontAttributes="Bold"
                                            Padding="10"
                                            WidthRequest="100"
                                            HeightRequest="40"
                                            CornerRadius="5"
                                            BorderWidth="0"/>
                                </HorizontalStackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Button Text="Nieuwe gebruiker toevoegen" 
                        Clicked="OnAddUser" 
                        BackgroundColor="Green" 
                        TextColor="White"
                        FontAttributes="Bold"
                        Padding="10"
                        CornerRadius="5"
                        BorderWidth="0"/>
            </VerticalStackLayout>
        </ScrollView>

        <controls:IconBar Grid.Row="1" />
    </Grid>

</ContentPage>
