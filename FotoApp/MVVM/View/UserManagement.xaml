<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:FotoApp.Controls"
             x:Class="FotoApp.MVVM.View.UserManagement"
             Title="UserManagement">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Text="Instellingen voor frequentie" FontSize="Large" HorizontalOptions="Center" />

        <Button Text="Kies Frequentie" Clicked="OnChooseFrequencyClicked" 
                BackgroundColor="Green" 
                TextColor="White" 
                FontSize="16" 
                Padding="10"
                CornerRadius="5" 
                WidthRequest="200" 
                HorizontalOptions="Center" 
                VerticalOptions="CenterAndExpand"/>

        <controls:IconBar Grid.Row="1" />
    </Grid>
</ContentPage>
