<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:FotoApp.Controls"
             x:Class="FotoApp.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="0" Padding="20">
            <VerticalStackLayout>
                <Button Text="Open Database Browser" 
                    Clicked="OpenDatabaseBrowser" 
                    BackgroundColor="Green" 
                    TextColor="White" 
                    CornerRadius="8"
                    HorizontalOptions="Fill"
                    VerticalOptions="Center" />

                <Button Text="Beheer Gebruikers"
                    Clicked="OnManageUsersClicked"
                    BackgroundColor="Blue"
                    TextColor="White"
                    CornerRadius="8"
                    HorizontalOptions="Fill"
                    VerticalOptions="Center" />

                <Button 
                    Text="Uitloggen" 
                    Clicked="OnLogoutButtonClicked" 
                    BackgroundColor="Red"
                    TextColor="Black" 
                    CornerRadius="8"
                    HorizontalOptions="Fill"
                    VerticalOptions="End" />
            </VerticalStackLayout>
        </ScrollView>

        <controls:IconBar Grid.Row="1" />
    </Grid>

</ContentPage>
